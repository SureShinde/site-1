/** @var $block \Magento\Checkout\Block\Cart\Item\Renderer\Actions\Edit */
$_item = $block->getItem();
$product = $_item->getProduct();
if ($_item->getMediaclipProjectId()) {
    $mediaclipprojectid = $_item->getMediaclipProjectId();
}
/**
